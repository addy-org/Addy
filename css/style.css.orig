body {
    font-family: 'Muli', sans-serif;
}

#maparea {
    width: 100%;
    height: 100%;
    right: 0%;
    top: 0%;
    position: absolute;
    opacity: 1;
    z-index: 0;
    font-family: 'Muli', sans-serif;

}
.form-control{
        background-color: rgba(221, 226, 227, 0.2);
    border: solid 1px #E4E4E4;
    padding: 10px;
}

.logo {
    position: fixed;
    top: 20px;
    right:30px;
    }
.sidebar{
    position: absolute;
    left: 10px;
    top: 10px;
    
    padding: 10px;
    width: 320px;
    background-color: #fff;
    border-radius: 3px;
    box-shadow: rgba(0, 0, 0, 0.3) 0px 1px 4px -1px;
}

.info .bar{
    margin-bottom: 15px;
}
.info .heading{
    text-transform: uppercase;
    opacity: 0.6;
}
.info .content {
    font-weight: 800;
    font-size: 18px;
}

.btn-success{
    background-color: #83de8a;
    border-color: #83de8a;
}